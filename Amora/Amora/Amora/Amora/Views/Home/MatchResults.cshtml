@model Amora.Models.RegisterViewModel
@{
    ViewData["Title"] = @Amora.Resources.Resource.Match;
}
<style>
    body {
        background-image: url('/Images/Website/background.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>

<div class="container d-flex flex-column">
    <div class="card mb-4 shadow-sm bg-danger d-flex">
        <img src="~/Images/@Model.Photo" class="card-img-top " alt="@Model.Name's photo">
        <div class="card-body">
            <h5 class="card-title">@($"{Model.Name} {Model.Surname}")</h5>
            <p class="card-text">@Amora.Resources.Resource.Gender: @Model.Gender</p>
            <p class="card-text">@Amora.Resources.Resource.Age: @(DateTime.Now.Year - Model.Age.Year)</p>
            <p class="card-text">@Amora.Resources.Resource.Hobby: @Model.Hobby</p>
        </div>
    </div>
    <form asp-action="MatchDecision" asp-controller="Account" method="post" class="d-flex">
        <input type="hidden" name="Gender" value="@Model.Gender" />
        <input type="hidden" name="Id" value="@Model.Id" />
        <button type="submit" name="Decision" value="No" class="btn-lg btn-info w-50 mx-1">@Amora.Resources.Resource.No</button>
        <button type="submit" name="Decision" value="Yes" class="btn-lg btn-danger w-50">@Amora.Resources.Resource.Yes</button>
    </form>
</div>
